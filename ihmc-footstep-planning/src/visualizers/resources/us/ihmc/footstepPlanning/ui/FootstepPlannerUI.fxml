<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <fx:include fx:id="footstepPlannerMenuUI" source="FootstepPlannerMenuUI.fxml"/>
    </top>
    <bottom>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>

                <Tab text="Status">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        <children>
                            <fx:include fx:id="statusTab" source="StatusTab.fxml"/>
                        </children>
                    </content>
                </Tab>

                <Tab text="Start/Goal">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        <children>
                            <fx:include fx:id="startGoalTab" source="StartGoalTab.fxml"/>
                        </children>
                    </content>
                </Tab>

                <Tab text="Footstep Parameters">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        <children>
                            <fx:include fx:id="footstepPlannerParametersUI" source="FootstepPlannerParametersUI.fxml"/>
                        </children>
                    </content>
                </Tab>

                <Tab text="Footstep Costs">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        <children>
                            <fx:include fx:id="footstepPlannerCostsUI" source="FootstepPlannerCostsUI.fxml"/>
                        </children>
                    </content>
                </Tab>

                <Tab text="Node checking">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        <children>
                            <fx:include fx:id="footstepNodeCheckingUI" source="FootstepNodeCheckingUI.fxml"/>
                        </children>
                    </content>
                </Tab>

                <Tab text="Visualization Control">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        <children>
                            <fx:include fx:id="visibilityGraphsUI" source="Visualization.fxml"/>
                        </children>
                    </content>
                </Tab>

                <Tab text="Unit Test Exporter">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        <children>
                            <fx:include fx:id="dataExporterAnchorPane" source="FootstepPlannerDataExporterAnchorPane.fxml"/>
                        </children>
                    </content>
                </Tab>


            </tabs>
        </TabPane>
    </bottom>
</BorderPane>
